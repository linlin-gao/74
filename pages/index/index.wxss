swiper {
  height: 320rpx;
}

swiper image {
  width:750rpx;
  height: 320rpx;
}

/* 活动标签 */ 
.title {
  font-size: 28rpx;
  color: #3c3c3c;
  font-weight: 500;
  line-height: 1;
  padding: 20rpx 30rpx;
}

.item image {
  width: 750rpx;
  height: 320rpx;
}

.item .info {
  padding: 16rpx 130rpx 20rpx 30rpx;
  position: relative;
  height: 180rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.item .name {
  font-size: 30rpx;
  color: #3c3c3c;
}

.item .extra {
  font-size: 22rpx;
  color: #B4B4B4;
  position: absolute;
  bottom: 20rpx;
}

.item .extra .text {
  margin-right: 60rpx;
}

.item .status {
  position: absolute;
  right: 30rpx;
  top: 16rpx;
  font-size: 30rpx;
  color: #FE6249;
}